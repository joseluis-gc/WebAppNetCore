@model IEnumerable<Category>

	<div class="container">
		<div class="row pt-4">
			<div class="col-lg-6">
				<h2 class="text-primary">Category List</h2>
			</div>
			<div class="col-lg-6 text-right">
				<a asp-controller="Category"  asp-action="Create" class="btn btn-outline-primary">Create New Category</a>
			</div>
		</div>

		<br /><br />

		@if(Model.Count() > 0)
		{
			<table class="table table-striped table-hover" style="width:100%">
				<thead>
					<th>Category</th>
					<th>Order</th>
					<th></th>
				</thead>
				<tbody>
					@foreach (var obj in Model)
					{
						<tr>
							<td>@obj.CategoryName</td>
							<td>@obj.DisplayOrder</td>
							<td class="text-center">
								<div class="w-75 btn-group" role="group">
									<a asp-controller="Category" asp-route-id="@obj.CategoryId" asp-action="Edit" class="btn btn-primary">
										Edit
									</a>

									<a asp-controller="Category" asp-route-id="@obj.CategoryId" asp-action="Delete" class="btn btn-danger">
										Delete
									</a>
								</div>
							</td>
						</tr>		
					}
				</tbody>
			</table>
		}
		else
		{
			<p>There's nothing to see here.</p>
		}

	</div>

