@model Category


<form method="post" asp-action="DeletePost">
	<input type="hidden" asp-for="CategoryId" />
	<div class="border p-3">
		<div class="form-group row">
			<h2 class="text-primary pl-3">Delete Category: <b class="text-danger">@Model.CategoryName</b></h2>
		</div>

		<div class="row">
			<div class="col-8">
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="CategoryName"></label>
					</div>
					<div class="col-8">
						<input asp-for="CategoryName" disabled class="form-control" />
					</div>

				</div>
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="DisplayOrder"></label>
					</div>
					<div class="col-8">
						<input class="form-control" disabled asp-for="DisplayOrder" />
					</div>

				</div>
				<div class="form-group row">
					<div class="col-8 offset-4 row">

						<div class="col">
							<button type="submit" class="btn btn-danger w-100">Delete Category</button>
						</div>
						<div class="col">
							<a asp-action="Index" class="btn btn-outline-dark w-100">Back</a>
						</div>
					</div>
				</div>
			</div>
			<div class="col-4">
				@* Keep this empty *@
			</div>
		</div>

	</div>
</form>

@section Scripts{

	@{<partial name="_ValidationScriptsPartial" />}

}