@model IEnumerable<Product>

<div class="container">
	<div class="row pt-4">
		<div class="col-lg-6">
			<h2 class="text-primary">Type List</h2>
		</div>
		<div class="col-lg-6 text-right">
			<a asp-action="Upsert" class="btn btn-outline-primary">Create New Product</a>
		</div>
	</div>

	<br /><br />

	@if (Model.Count() > 0)
	{
<table class="table table-striped table-hover" style="width:100%">
	<thead>
	<th>Product</th>
	<th>Price</th>
	<th></th>
	</thead>
	<tbody>
		@foreach (var obj in Model)
		{
		<tr>
			<td>@obj.Name</td>
			<td>@obj.Price</td>
			<td class="text-center">
				<div class="w-75 btn-group" role="group">
					<a  asp-route-id="@obj.Product_id" asp-action="Upsert" class="btn btn-primary">
						Edit
					</a>

					<a asp-route-id="@obj.Product_id" asp-action="Delete" class="btn btn-danger">
						Delete
					</a>
				</div>
			</td>
		</tr>

		}
	</tbody>
</table>
	}
	else
	{
		<p>There's nothing to see here.</p>
	}

</div>

